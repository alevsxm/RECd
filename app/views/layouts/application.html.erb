<!DOCTYPE html>
<html>
<head>
  <title>RecdApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>RECd</h1>
    <% if user_signed_in? %>
      <% if current_user.image? %>
      <img src="<%= current_user.image %>">
      <% else %>
      <img class="user-image" src="<%= current_user.avatar.url(:thumb) %>">
      <% end %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
    <nav>
      <ul>
        <li><a href="">Home</a></li>
        <li><a href="#search">REC'd Someone</a></li>
        <li><a href="#friends">Friends</a></li>
        <li><a href="#friend-requests">Friend Requests</a></li>
        <li><a href="#find-friends">Find Friends</a></li>
      </ul>
    </nav>
    <div id="container">
      <div id="search-input"></div>
      <div id="search-results"></div>
      <div id="book-recommendations"></div>
      <div id="movie-recommendations"></div>
      <div id="friends"></div>
      <div id="friend-requests"></div>
      <div id="friend-search-input"></div>
      <div id="friend-search-results"></div>
    </div>
  <% else %>
    <%= link_to 'Sign In', new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path %>
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
  <% end %>
  <p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>
