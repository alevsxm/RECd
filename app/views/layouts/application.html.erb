<!DOCTYPE html>
<html>
<head>
  <title>Recd</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>

  <div id="modal">
    <div id="rec-detail-modal"></div>
  </div>

      <header>
        <div id="header-container">
        <div id="title-container">
          <h1>RECd</h1>
        </div>
        <div id="nav-container">
          <nav>
            <ul>
              <% if current_user.image? %>
              <li><img src="<%= current_user.image %>"></li>
              <% else %>
              <li><img class="user-image" src="<%= current_user.avatar.url(:thumb) %>"></li>
              <% end %>
              <li><a href="">Home</a> |</li>
              <li><a href="#search">Send a REC</a> |</li>
              <li><a href="#friends">Friends</a> |</li>
              <li><a href="#friend-requests">Friend Requests</a> |</li>
              <li><a href="#find-friends">Find Friends</a> |</li>
              <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
            </ul>
          </nav>
        </div>
        </div>
    </header>

  <div id="container">

    <div id="search-input"></div>
    <div id="search-results"></div>
    <div id="book-recommendations"><h3>My Book Recs</h3></div>
    <div id="movie-recommendations"><h3>My Movie and Show Recs</h3></div>
    <div id="friends"><h3>My Friends</h3></div>
    <div id="friend-requests"><h3>Pending Friend Requests</h3></div>
    <div id="friend-search-input"></div>
    <div id="friend-search-results"></div>
  </div>
  <% else %>
    <div id="landing">
      <div id="landing-content">
        <div id="welcome"><span>Welcome To:</span></div>
        <h1 id="landing">RECd</h1>
        <div id="caption"><span>Easily recommend movies and books to your friends and keep
          track of recommendations given to you</span></div>
        <nav>
          <ul>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
          </ul>
        </nav>
      </div>
    </div>
  <% end %>
  <p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>
